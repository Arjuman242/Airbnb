<% layout("/layouts/boilerplate.ejs") %>
<body>
   <div class="row">
      <div class="col-6 offset-3">

         <form action="/listings/<%= listing._id %>/update?_method=PUT" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
            <br>
            <h3>Edit your Listing</h3>
            
            <div>
               <label for="title" class="form-label">Title</label>
               <input type="text" placeholder="title"value="<%= listing.title %>" name="listing[title]" id="title" class="form-control" required >
              
              <div class="valid-feedback">looks good</div>
              <div class="invalid-feedback" >enter title</div>
             
            </div>
              
         
              <div>
               <label for="description" class="form-label">Description</label>
               <textarea name="listing[description]" id="description"  class="form-control"  placeholder="write about your listing" required ><%= listing.description %></textarea>
         
               <div class="valid-feedback">looks good</div>
               <div class="invalid-feedback">enter short description</div>
              </div>
                
               <div class="mt-3">
                  Orignal listing <br>
                  <img src="<%= orignalImageUrl %>" alt="listing" >
               </div>

              <div>
               <label for="image" class="form-label">Upload Image</label>
               <input type="file" id="image" name="listing[image]" class="form-control" required>
              
               <div class="valid-feedback">looks good</div>
               <div class="invalid-feedback">paste url of image</div>
              </div>
              
              <div class="row">

               <div class="col-md-4">
                  <label for="price" class="form-label">Price</label>
                  <input type="text" id="price" name="listing[price]" class="form-control" value="<%= listing.price %>" required>
                  
                  <div class="valid-feedback">looks good</div>
                  <div class="invalid-feedback">enter price</div>
                 </div>

                 <div class="col-md-8">
                  <label for="country" class="form-label">Country name</label>
                  <input type="text" id="country" name="listing[country]" class="form-control" value="<%= listing.country %>" required >
            
                  <div class="valid-feedback">looks good</div>
                  <div class="invalid-feedback">enter country</div>
         
                 </div>  

              </div>
              
              
              <div>
               <label for="location" class="form-label">Location</label>
               <input type="text" id="location" name="listing[location]" class="form-control" placeholder="<%= listing.location %>" required>
            
               <div class="valid-feedback">looks good</div>
               <div class="invalid-feedback">enter location</div>
              </div>
              
             
              <br>
              <button class="btn btn-dark">submit</button>
              
         </form>

      </div>

   </div>
   
</body>

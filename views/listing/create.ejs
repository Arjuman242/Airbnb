<% layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-6 offset-2" >
            <form action="/listings/create" method="POST" novalidate class="needs-validation" enctype="multipart/form-data">
                <br>
                <h3>Create your new Listing</h3>
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input type="text" placeholder="enter Title" name="listing[title]" id="title" class="form-control" required>
                    
                    <div class="valid-feedback">looks good</div>
                    <div class="invalid-feedback" >enter title</div>
                </div>
                
              
                <br>
                <div>
                    <label for="description" class="form-label">Description</label>
                    <textarea  id="description" name="listing[description]" placeholder="write about your listing" class="form-control" required></textarea>
                  

                    <div class="valid-feedback">looks good</div>
                    <div class="invalid-feedback">enter short description</div>
                </div>
        
                <br>
                <div>
                    <label for="image" class="form-label">Upload Image</label>
                    <input type="file" id="image" name="listing[image]" placeholder="url" class="form-control" required>
                    
                    <div class="valid-feedback">looks good</div>
                    <div class="invalid-feedback">paste url of image</div>
                </div>
                
                <br>
                <div class="row">
                    <div class="col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input type="text" id="price" name="listing[price]" placeholder="enter price" class="form-control" required>
                        
                        <div class="valid-feedback">looks good</div>
                        <div class="invalid-feedback">enter price</div>
                    </div>

                    <div class="col-md-8">
                        <label for="country" class="form-label">Country name</label>
                        <input type="text" id="country" name="listing[country]" placeholder="country" class="form-control" required>
                        
                        <div class="valid-feedback">looks good</div>
                        <div class="invalid-feedback">enter country</div>
               
                    </div>

                </div>
                
                
                <br>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input type="text" id="location" name="listing[location]" placeholder="location" class="form-control" required>
                     
                    <div class="valid-feedback">looks good</div>
                    <div class="invalid-feedback">enter location</div>
                </div>
                
                <br>
                
               
               <button class="btn btn-dark">submit</button>
               
             
            </form>    

        </div>
        

    </div>
    
    
       
  
</body>
